<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #f8f9fc;
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 90px;
            --header-height: 60px;
        }

        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fc;
            overflow-x: hidden;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background-color: var(--primary-color);
            color: white;
            z-index: 1000;
            transition: all 0.3s ease;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
        }

        .sidebar.collapsed .nav-item-text {
            display: none;
        }

        .sidebar-header {
            height: var(--header-height);
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(0, 0, 0, 0.1);
        }

        .sidebar-header h3 {
            margin: 0;
            font-weight: 700;
        }

        .nav {
            padding: 20px 0;
        }

        .nav-item {
            position: relative;
            margin-bottom: 5px;
            transition: all 0.3s ease;
        }

        .nav-item:hover {
            background-color: rgba(0, 0, 0, 0.2);
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            display: flex;
            align-items: center;
            padding: 12px 20px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: white;
        }

        .nav-link.active {
            color: white;
            background-color: rgba(0, 0, 0, 0.2);
        }

        .nav-icon {
            width: 30px;
            font-size: 1.1rem;
            text-align: center;
        }

        .nav-item-text {
            margin-left: 10px;
            transition: opacity 0.3s ease;
        }

        /* Main Content Styles */
        .main-content {
            margin-left: var(--sidebar-width);
            transition: all 0.3s ease;
        }

        .main-content.expanded {
            margin-left: var(--sidebar-collapsed-width);
        }

        .topbar {
            height: var(--header-height);
            background-color: white;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .toggle-btn {
            font-size: 1.5rem;
            cursor: pointer;
            color: #6e707e;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            object-fit: cover;
        }

        .content-container {
            padding: 20px;
        }

        /* Card Styles */
        .dashboard-card {
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 30px;
            transition: all 0.3s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .card-header {
            padding: 15px 20px;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
            background-color: #f8f9fc;
            color: #4e73df;
            border-radius: 5px 5px 0 0;
        }

        .card-body {
            padding: 20px;
        }

        /* Stats Card Styles */
        .stat-card {
            position: relative;
            overflow: hidden;
            color: white;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .stat-card .stat-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            font-size: 2.5rem;
            opacity: 0.3;
        }

        .stat-card .stat-title {
            font-size: 0.9rem;
            text-transform: uppercase;
            margin-bottom: 5px;
            opacity: 0.8;
        }

        .stat-card .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .stat-card .stat-change {
            font-size: 0.8rem;
            margin-top: 5px;
        }

        /* Table Styles */
        .dashboard-table {
            width: 100%;
            border-collapse: collapse;
        }

        .dashboard-table th, .dashboard-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e3e6f0;
        }

        .dashboard-table th {
            background-color: #f8f9fc;
            color: #4e73df;
            font-weight: 600;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.75rem;
        }

        .badge-success {
            background-color: #1cc88a;
            color: white;
        }

        .badge-warning {
            background-color: #f6c23e;
            color: white;
        }

        .badge-danger {
            background-color: #e74a3b;
            color: white;
        }

        /* Chart Container */
        .chart-container {
            position: relative;
            height: 300px;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .sidebar {
                width: var(--sidebar-collapsed-width);
            }
            .sidebar .nav-item-text {
                display: none;
            }
            .main-content {
                margin-left: var(--sidebar-collapsed-width);
            }
        }

        /* Animation Classes */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .slide-in-right {
            animation: slideInRight 0.5s ease-in-out;
        }

        @keyframes slideInRight {
            from { transform: translateX(100px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        /* Dropdown Menu */
        .dropdown-menu {
            animation: fadeIn 0.3s ease-in-out;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar animate_animated animate_fadeInLeft">
        <div class="sidebar-header">
            <h3 class="animate_animated animate_fadeIn">ADMIN</h3>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="dashboard" class="nav-link active" onclick="showDashboard()">
                    <i class="fas fa-tachometer-alt nav-icon"></i>
                    <span class="nav-item-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="viewusers" class="nav-link" onclick="showUsers()">
                    <i class="fas fa-users nav-icon"></i>
                    <span class="nav-item-text">Users</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="Enquiry" class="nav-link" onclick="showEnquiry()">
                    <i class="fas fa-question-circle nav-icon"></i>
                    <span class="nav-item-text">Enquiry</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="AddProduct" class="nav-link" onclick="showProducts()">
                    <i class="fas fa-cubes nav-icon"></i>
                    <span class="nav-item-text">Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="ViewProduct" class="nav-link" onclick="showViewProducts()">
                    <i class="fas fa-eye nav-icon"></i>
                    <span class="nav-item-text">View Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="ViewOrder" class="nav-link" onclick="showOrders()">
                    <i class="fas fa-shopping-cart nav-icon"></i>
                    <span class="nav-item-text">Orders</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="Setting" class="nav-link" onclick="showSettings()">
                    <i class="fas fa-cog nav-icon"></i>
                    <span class="nav-item-text">Settings</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="Alogout" class="nav-link" onclick="logout()">
                    <i class="fas fa-sign-out-alt nav-icon"></i>
                    <span class="nav-item-text">Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content animate_animated animate_fadeInRight">
        <!-- Topbar -->
        <div class="topbar">
            <div class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </div>
            <div class="user-info">
                <img src="https://placehold.co/150x150" alt="Admin profile photo" class="user-img">
                <span><%= aname %></span>
            </div>
        </div>

        <!-- Content Container -->
        <div class="content-container">
            <!-- Dashboard Content -->
         



                <!-- Recent Orders -->
                <div class="dashboard-card fade-in">
                    <div class="card-header">
                        Product
                        
                    </div>
                    <div class="card-body">
                        <table class="dashboard-table">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                      <th>Quanity</th>
                                      <th>Price</th>
                                      <th>Description</th>
                                      <th>Image</th>
                                      <th>Delete</th>
                                    
                            
                                </tr>
                            </thead>
                            <tbody>
                                 <% data.forEach((entry)=>{
                                   %> 

                                <tr>
                                     
                                     <td><%= entry.id %></td>
                                    <td><%= entry.name %></td>
                                    <td><%= entry.category %></td>
                                    <td><%= entry.quanity %></td>
                                    <td><%= entry.price %></td>
                                    <td><%= entry.description %></td>
                                    <td><img height="40" width="40" src="<%= entry.image %>"></td>

                               <td> <a href="delproduct?id=<%= entry.id %>">Delete</a></td>
                                </tr>



                               <% })%>

                                



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            

           

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
</body>
</html>